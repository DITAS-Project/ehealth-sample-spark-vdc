FROM java:8-jre-alpine
COPY .application.conf /conf/application.conf
COPY target/universal/ehealth-sample-spark-vdc-1.0-SNAPSHOT.tgz /app/ehealth-sample-spark-vdc-1.0-SNAPSHOT.tgz
EXPOSE 9000
RUN apk --update add tar
ENTRYPOINT ["tar", "xvzf", "/app/ehealth-sample-spark-vdc-1.0-SNAPSHOT.tgz"]
ENTRYPOINT ["\/app\/ehealth-sample-spark-vdc-1.0-SNAPSHOT\/bin\/ehealth-sample-spark-vdc", "-Dconfig.file='\/conf\/production.conf'"]
